generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password Password?
  category Category[] @relation("StoreToCategory")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Password {
  passwordHash String
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Category {
  id String @id @default(uuid())
  name String @unique
  userId String
  user User @relation("StoreToCategory",fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    @@index([userId])
}